/* =========================================
   VALLIT PREMIUM DESIGN SYSTEM (V2.0)
   Inspiration: Linear, Vercel, Cursor
   ========================================= */

:root {
    /* --- Color Palette: Vercel/Linear Dark Mode --- */
    --bg-body: #050505;
    /* Deepest black, not #000 */
    --bg-card: rgba(255, 255, 255, 0.03);
    --bg-card-hover: rgba(255, 255, 255, 0.06);
    --bg-nav: rgba(5, 5, 5, 0.7);

    /* Grays */
    --gray-100: #ededed;
    --gray-200: #a1a1a1;
    --gray-300: #888888;
    --gray-400: #666666;
    --gray-500: #444444;
    --gray-600: #333333;
    --gray-700: #222222;
    --gray-800: #111111;
    --gray-900: #0a0a0a;

    /* Accent: Teal/Cyan (Subtle Glows) */
    --color-accent: #00D4AA;
    /* Primary Teal */
    --color-accent-dim: rgba(0, 212, 170, 0.15);
    --color-accent-glow: rgba(0, 212, 170, 0.4);

    /* Semantic Colors */
    --text-primary: #ffffff;
    --text-secondary: var(--gray-200);
    --text-tertiary: var(--gray-400);
    --border-subtle: rgba(255, 255, 255, 0.08);
    --border-hover: rgba(255, 255, 255, 0.15);
    --border-focus: var(--color-accent);

    /* --- Typography: Inter --- */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    --font-mono: 'JetBrains Mono', monospace;

    /* --- Spacing System (4px Grid) --- */
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 16px;
    --space-6: 24px;
    --space-8: 32px;
    --space-12: 48px;
    --space-16: 64px;
    --space-24: 96px;
    --space-32: 128px;

    /* --- Radius --- */
    --radius-sm: 6px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-full: 9999px;

    /* --- Shadows (Glow System) --- */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.5);
    --shadow-card: 0 4px 20px rgba(0, 0, 0, 0.5);
    --shadow-glow: 0 0 80px -20px var(--color-accent-dim);
    --shadow-btn-hover: 0 0 20px -5px var(--color-accent-glow);

    /* --- Transitions (Buttery Smooth) --- */
    --ease-out-expo: cubic-bezier(0.19, 1, 0.22, 1);
    --ease-out-quart: cubic-bezier(0.165, 0.84, 0.44, 1);
    --transition-fast: 150ms var(--ease-out-quart);
    --transition-base: 300ms var(--ease-out-expo);
    --transition-slow: 500ms var(--ease-out-expo);
}

/* Base Reset & Setup */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
    font-family: var(--font-sans);
    background-color: var(--bg-body);
    color: var(--text-primary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    line-height: 1.5;
    overflow-x: hidden;
    position: relative;
    min-height: 100vh;
}

/* --- Global Background Noise & Glow --- */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.04'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: -1;
}

body::after {
    content: "";
    position: fixed;
    top: -50%;
    left: 50%;
    width: 120vw;
    height: 80vh;
    background: radial-gradient(circle at 50% 50%, rgba(20, 40, 50, 0.15), transparent 70%);
    transform: translateX(-50%);
    z-index: -2;
    pointer-events: none;
}

/* --- Typography Utilities --- */
h1,
h2,
h3,
h4,
h5,
h6 {
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-4);
}

.display {
    font-size: 4rem;
    /* 64px */
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: -0.03em;
    background: linear-gradient(to bottom right, #ffffff 30%, #a1a1a1 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

@media (max-width: 768px) {
    .display {
        font-size: 2.5rem;
    }
}

.display-sm {
    font-size: 2.5rem;
    /* 40px */
    font-weight: 600;
    letter-spacing: -0.025em;
}

p {
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
}

.text-gradient {
    background: linear-gradient(135deg, #fff 0%, #aaa 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.text-gradient-accent {
    background: linear-gradient(135deg, #fff 60%, var(--color-accent) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* --- Hero Section --- */
.page-hero {
    padding-top: 180px;
    padding-bottom: 100px;
    min-height: 60vh;
    display: flex;
    align-items: center;
}

.page-hero-content {
    max-width: 800px;
}

/* --- Layout Containers --- */
.container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6);
}

.section {
    padding: var(--space-24) 0;
    position: relative;
}

.grid-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
}

@media (max-width: 1024px) {
    .grid-3 {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .grid-3 {
        grid-template-columns: 1fr;
    }
}

.grid-2 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
}

@media (max-width: 768px) {
    .grid-2 {
        grid-template-columns: 1fr;
    }
}

/* --- Components: Navbar --- */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 72px;
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(5, 5, 5, 0.6);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    transition: border-color var(--transition-base);
}

.navbar .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.navbar-logo {
    font-weight: 700;
    font-size: 1.25rem;
    color: #fff;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.navbar-nav {
    display: flex;
    gap: var(--space-8);
    list-style: none;
    margin: 0;
    padding: 0;
}

.navbar-nav a {
    color: var(--text-tertiary);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: color var(--transition-fast);
    position: relative;
}

.navbar-nav a:hover,
.navbar-nav a.active {
    color: var(--text-primary);
}

.navbar-nav a.active::after {
    content: '';
    position: absolute;
    bottom: -26px;
    /* Align with navbar border */
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--text-primary);
    box-shadow: 0 -2px 8px rgba(255, 255, 255, 0.5);
}

/* Navbar Actions (Buttons) */
.navbar-actions {
    display: flex;
    align-items: center;
    gap: var(--space-4);
}

@media (max-width: 768px) {
    .navbar-actions {
        display: none;
    }
}

/* --- Mobile Menu Toggle --- */
.navbar-toggle {
    display: none;
    background: none;
    border: none;
    color: #fff;
    width: 32px;
    height: 32px;
    flex-direction: column;
    justify-content: center;
    gap: 6px;
    cursor: pointer;
    z-index: 1002;
    padding: 0;
}

.navbar-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background-color: #fff;
    transition: all 0.3s ease;
}

@media (max-width: 768px) {
    .navbar-toggle {
        display: flex;
    }

    .navbar-nav {
        position: fixed;
        top: 0;
        right: 0;
        width: 100%;
        height: 100vh;
        background: var(--bg-body);
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transform: translateX(100%);
        transition: transform 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
        z-index: 1001;
        border-left: 1px solid var(--border-subtle);
    }

    .navbar-nav.open {
        transform: translateX(0);
    }

    .navbar-nav a {
        font-size: 1.5rem;
    }
}

/* Scroll Progress */
.scroll-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), #fff);
    z-index: 10000;
    transition: width 0.1s ease-out;
    box-shadow: 0 0 10px var(--color-accent);
}