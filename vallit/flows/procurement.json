      }
    },
    {
      "id": "notion_update",
      "type": "notion.update_page",
      "input": {
        "page_id": "page_1",
        "properties": {
          "Status": "Freigegeben"
        }
      }
    },
    {
      "id": "notify_success",
      "type": "teams.post_message",
      "input": {
        "channel": "{{context.teams_channel}}",
        "text": "Beschaffung freigegeben."
      }
    }
  ]
