{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        },
        {
            "src": "vallit-site/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/app.py"
        },
        {
            "src": "/widget/(.*)",
            "dest": "/app.py"
        },
        {
            "src": "/company(.*)",
            "dest": "/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/vallit-site/$1"
        }
    ]
}