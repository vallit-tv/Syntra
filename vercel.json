{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 15,
                "includeFiles": [
                    "templates/**",
                    "static/**",
                    "*.py",
                    "bot/**",
                    "migrations/**",
                    "requirements.txt",
                    ".env"
                ]
            }
        },
        {
            "src": "vallit-site/package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/status",
            "destination": "/api/index.py"
        },
        {
            "source": "/brand(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/widget/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/static/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/health",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/vallit-site/$1"
        }
    ]
}